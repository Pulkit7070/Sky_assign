{
  "name": "sky-desktop-assistant",
  "version": "1.0.0",
  "description": "Sky Desktop Assistant - Floating AI assistant built with Electron, React, TypeScript, Tailwind CSS, Zustand, and Framer Motion",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite --port 5173\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "ai-assistant",
    "desktop-app"
  ],
  "author": "Sky Team",
  "license": "MIT",
  "dependencies": {
    "chrono-node": "^2.9.0",
    "electron-window-state": "^5.0.3",
    "framer-motion": "^11.0.0",
    "googleapis": "^166.0.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-window": "^1.8.10",
    "remark-gfm": "^4.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.sky.desktop-assistant",
    "productName": "Sky Desktop Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
